<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>opiskelija</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body style="background-color:rgb(43, 255, 0);">
<body class="container" style="margin-top: 50px;">

    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <h1 style="text-align:center;"></h1>
                   <p style="font-size:50px;">
                    <h1 style="color:rgb(253, 0, 0);">
                    
                    <a class="nav-link">Opiskelijat</a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/books/add">Lisää opiskelija</a>
                </li>
            </ul>
        </div>
    <div class="card-body">

        <% if(data.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Etunimi</th>
                    <th scope="col">Sukunimi</th>
                    <th scope="col">osoite</th>
                    <th scope="col">luokkatunnus</th>
                    <th width="200px">valinta</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
           
                    <td><%= data[i].etunimi%></td>
                    <td><%= data[i].sukunimi%></td>
                    <td><%= data[i].osoite%></td>
                    <td><%= data[i].luokkatunnus%></td>
                    <td>
                        <a class="btn btn-success edit" href="../books/edit/<%=data[i].id%>">muokkaa</a>
                        <a class="btn btn-danger delete" onclick="return alert('oletko varma?')" href="../books/delete/<%=data[i].id%>">poista</a>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>

        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">opiskelijaa ei löytynyt!</p>
        <% } %>

        </div>
    </div>

</body>
</html>
